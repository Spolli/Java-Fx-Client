<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllerLogon">
   <children>
      <Pane fx:id="loginPage" layoutY="-3.0" prefHeight="300.0" prefWidth="500.0">
         <children>
            <Label layoutX="86.0" layoutY="58.0" text="SSO" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
