            <Label layoutX="86.0" layoutY="162.0" text="Pin + Rsa Token" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="86.0" layoutY="109.0" text="Password" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="sso" layoutX="201.0" layoutY="55.0" onAction="#onEnter" onMouseClicked="#clearSSO" />
