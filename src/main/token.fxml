<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllerToken">
   <children>
      <VBox prefHeight="300.0" prefWidth="500.0">
         <children>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label fx:id="disclaimer" layoutX="236.0" layoutY="42.0" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <PasswordField fx:id="token" layoutX="176.0" layoutY="38.0" onAction="#onEnter" onMouseClicked="#clearWarning" />
                  <Label fx:id="warning" layoutX="174.0" layoutY="69.0" prefHeight="17.0" prefWidth="149.0" textAlignment="CENTER" textFill="RED" />
               </children>
            </Pane>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ToolBar prefHeight="100.0" prefWidth="500.0">
                    <items>
                      <Button fx:id="login" mnemonicParsing="false" onAction="#logon" text="Logon">
                           <padding>
                              <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
                           </padding>
                        </Button>
                        <Button fx:id="reset" mnemonicParsing="false" onAction="#reset" text="Reset">
                           <padding>
                              <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
                           </padding>
                        </Button>
                        <Button fx:id="exit" mnemonicParsing="false" onAction="#close" text="Exit">
                           <padding>
                              <Insets bottom="10.0" left="65.0" right="65.0" top="10.0" />
                           </padding>
                        </Button>
                    </items>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ToolBar>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
